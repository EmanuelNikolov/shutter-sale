{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ camera.make }} / {{ camera.model }} - ${{ camera.price }} |
        {% if camera.quantity > 0 %}
            <span class="in-stock">IN STOCK</span>
        {% else %}
            <span class="out-of-stock">OUT OF STOCK</span>
        {% endif %}
    </h1>

    <h2 class="h3">
        Posted by:
        <a href="{{ path('user_show', { 'id': camera.user.id }) }}">
            {{ camera.user.username }}
        </a>
    </h2>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div><img class="card-img" src="{{ camera.imageUrl }}"></div>
                <hr>
                <p><strong>Is Full Frame: </strong>{% if camera.isFullFrame %}Yes{% else %}No{% endif %}</p>
                <p><strong>Min Shutter Speed: </strong>{{ camera.minShutterSpeed }}</p>
                <p><strong>Max Shutter Speed: </strong>{{ camera.maxShutterSpeed }}</p>
                <p><strong>Min ISO: </strong>{{ camera.minIso }}</p>
                <p><strong>Max ISO: </strong>{{ camera.maxIso }}</p>
                <p><strong>Video Resolution: </strong>{{ camera.videoResolution }}</p>
                <p><strong>Light Metering: </strong>
                    {% for metering in camera.lightMetering %}
                        - {{ metering }}
                    {% endfor %}
                    -
                </p>
                <p><strong>Description:</strong> {{ camera.description }}</p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="mb-3">
            <a href="{{ path('camera_index') }}">Back to the list</a>
        </div>
    </div>
{% endblock %}
