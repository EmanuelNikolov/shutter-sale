{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cameras</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Image</th>
            <th>Make</th>
            <th>Model</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for camera in cameras %}
            <tr>
                <td><img src="{{ camera.imageUrl }}"></td>
                <td>{{ camera.make }}</td>
                <td>{{ camera.model }}</td>
                <td>{{ camera.price }}</td>
                <td>
                    {% if camera.quantity > 0 %}
                        <span class="in-stock">IN STOCK</span>
                    {% else %}
                        <span class="out-of-stock">OUT OF STOCK</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('camera_show', { 'id': camera.id }) }}">show</a>
                    <span> | </span>
                    <a href="{{ path('camera_edit', { 'id': camera.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('camera_new') }}">Create a new camera</a>
    </div>
{% endblock %}
